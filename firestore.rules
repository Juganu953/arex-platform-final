rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own business data
    match /businesses/{businessId} {
      allow read, write: if request.auth != null && request.auth.uid == businessId;
    }
    
    // Allow users to read/write their own agent data
    match /agents/{agentId} {
      allow read, write: if request.auth != null && request.auth.uid == agentId;
    }
    
    // Leads can be created by anyone, read by businesses
    match /leads/{leadId} {
      allow create: if true;
      allow read: if request.auth != null;
      allow update: if request.auth != null && 
        resource.data.businessId == request.auth.uid;
    }
    
    // Referrals can be created/read by agents
    match /referrals/{referralId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && 
        request.auth.uid == resource.data.agentId;
    }
    
    // Payments are read-only for users
    match /payments/{paymentId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
  }
}
